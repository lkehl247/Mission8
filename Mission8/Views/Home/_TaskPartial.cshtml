@model Mission8.Models.Task

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.TaskName</h5>
        <p class="card-text"><strong>Category:</strong> @Model.Category</p>
        <p class="card-text"><strong>Due Date:</strong> @(Model.DueDate?.ToString("MM/dd/yyyy") ?? "No Due Date")</p>

        <!-- Edit Button -->
        <a asp-action="EditTask" asp-route-id="@Model.TaskId" class="btn btn-primary">Edit</a>

        <!-- Delete Task Form -->
        <form asp-action="DeleteTask" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.TaskId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <!-- Mark as Complete Form -->
        <form asp-action="MarkComplete" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.TaskId" />
            <button type="submit" class="btn btn-success">Mark as Complete</button>
        </form>
    </div>
</div>